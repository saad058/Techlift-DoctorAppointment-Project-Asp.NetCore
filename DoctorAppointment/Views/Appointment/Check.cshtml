@model IEnumerable<DoctorAppointment.Models.DoctorInfo>

@{
  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Check</title>
</head>
<body>
    <div class="modal" tabindex="-1" role="dialog" id="modal-form">
        <div class="modal-dialog s" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @*View Return Display*@
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@


    @if (!Model.Any())
    {
        <p>   No doctors are available on that Department. </p>
    }

            else
            {

           
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorFee)
                </th>




                <th>
                    @Html.DisplayNameFor(model => model.First_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Last_Name)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAvailable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoctorFee)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.WeekdaysId)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.First_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last_Name)
                    </td>

                    <td>
                        <a type="button" class="btn-style-one rounded-pill" asp-controller="PatientInfoes" asp-action="RegisterPatient"> Book_My_Appointment</a>
                        @*<button type="button" class="btn btn-primary" asp-controller="" asp-action="" onclick="location.href='@Url.Action("Edit", new { id = item.DoctorId })'">Book Appointment</button>*@

                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
</body>
</html>

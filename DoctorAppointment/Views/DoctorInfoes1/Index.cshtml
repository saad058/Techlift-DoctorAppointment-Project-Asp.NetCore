@model IEnumerable<DoctorAppointment.Models.DoctorInfo>

@{
    ViewData["Title"] = "Index";
    @if(ViewBag.Role == "Admin")
    {
        Layout = "~/Views/Shared/_Layoutdd.cshtml";

    }
  else
            {
                Layout = "~/Views/Shared/Medicr_DoctorLayout.cshtml";
            }

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeAddress)
            </td>
            
           
            <td>

                <a asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.DoctorId" class="btn btn-success">Details</a>
                @*<a asp-action="Delete" asp-route-id="@item.DoctorId" class="btn btn-success">Del</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
